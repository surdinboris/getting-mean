extends layout

include _includes/sharedHTMLfunctions

block content
  .page-header
    .row.titleRow
      .col-sm-3.col-md-3
        img.titleRowEl#TitleImg(src="images/mainlogo.gif" alt="Grumpy Title")
      .col-sm-9.col-md-9
        .row
          h1.titleRowEl= pageHeader.title
  .row
    .col-xs-12.col-sm-8
      .error= message
      .row.list-group
        each location in locations
          .col-xs-12.list-group-item
            h4
              a(href="/locations/#{location._id}")= location.name
              small &nbsp;
                +outputRating(location.rating)
              span.badge.pull-right.badge-default= location.distance
            p.address= location.address
            p
              if location.facilities
                each facility in location.facilities
                  span.label.label-warning= facility
                  | &nbsp;
    .col-xs-12.col-sm-4
      p= sidebar.context