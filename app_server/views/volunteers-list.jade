extends layout

include _includes/sharedHTMLfunctions

block content
  .row.page-header: .col-lg-12
     h1= pageHeader.title

     .panel-body.volunteer-container
        .row
            .col-xs-12.col-md-9
                .row
                    each volunteer in volunteers
                        .row
                            .volunteer
                                .well.well-sm.volunteer-header
                                    span.rating
                                    p.reviewAuthor Name: #{volunteer.volunteerName}
                                    p.reviewAuthor Address: #{volunteer.volunteerAddress}
                                    .actions-container
                                        a.btn.btn-danger.btn-sm(href="/volunteers/#{volunteer._id}") Edit volunteer
                                        a.btn.btn-primary.btn-sm(href="/volunteers/delete/#{volunteer._id}") Delete volunteer
                                        a.btn.btn-success.btn-sm(href="/volunteers/view-locations/#{volunteer._id}") Assigned locations
