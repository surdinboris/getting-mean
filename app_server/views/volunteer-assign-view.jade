extends layout

block content
  .row.page-header: .col-lg-12
        h1= pageHeader.title
        form(action='/assignVolunteer', method= "post",  role="form")
            .row
                .col-xs-12.col-sm-6
                    div.locUpdContainer
                        select
                            each location in locations
                                option(value="#{location._id}") #{location.name}
                .col-xs-12.col-sm-6
                    div.volUpdContainer
                        select(name='dropDown', id='')
                            each vol, i in volunteers
                                //label #{value.volunteerName}:&nbsp
                                option(value=67867867) #{vol.volunteerName}
            .row
                .col-xs-12.col-sm-6
                    div
                        button.btn.btn-default(type='submit') Submit